<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<div class="bg-dark">
  <div id="search" class="container">
    <div class="row">
      <div class="col-6">
        <input type="text" class="form-control" id="searchTextBox" value="" placeholder="Enter movie title" style="width:100%;">
      </div>
      <div class="col-4">
        <button type="button" class="btn btn-light" id="searchButton">Search</button>
      </div>
    </div>
  </div>
</div>

<div class="container" id="movies">

</div>

<div id="addReviewModal" class="modal" tabindex="-1">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Review</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <form class="" action="/addReview" method="post">
            <div class="row">
              <div class="col-4">
                <label class="form-control" for="movie_name">Movie Name</label>
              </div>
              <div class="col-8">
                <input class="form-control" type="text" name="movie_name" id="movie_title">
              </div>
            </div>
            <div class="row">
              <div class="col-4">
                <label class="form-control" for="review">Enter your review here:</label>
              </div>
              <div class="col-8">
                <textarea class="form-control" name="review" rows="10" cols="80"></textarea>
              </div>
            </div>
            <div class="row">
              <div class="col-10">

              </div>
              <div class="col-2">
                <button class="btn btn-primary" type="submit" name="button">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('../partials/footer') %>
